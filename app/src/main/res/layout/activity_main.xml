<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".bottoms.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primary"
        android:elevation="71dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/openMenu"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_menu_book_24"
                android:backgroundTint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:fontFamily="@font/shrift"
                android:paddingStart="23dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                android:background="@color/white">

            </FrameLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bnv"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:background="@color/primary"
                app:itemIconSize="27dp"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/primary"
                app:menu="@menu/menu" />

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/primary"
            android:elevation="31dp"
            app:headerLayout="@layout/header"
            app:itemIconPadding="21dp"
            app:itemIconSize="24dp"
            app:itemIconTint="@color/white"
            app:itemTextAppearance="@style/menuStyle"
            app:itemTextColor="@color/white"
            app:itemVerticalPadding="9dp"
            app:menu="@menu/menu2">

            <ImageView
                android:id="@+id/myLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="30dp"
                android:alpha="0.0"
                android:background="@color/primary"
                android:backgroundTint="@color/primary"
                android:src="@drawable/brend"
                app:tint="@color/white" />

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>